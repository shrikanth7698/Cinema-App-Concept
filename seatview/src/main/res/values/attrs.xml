<resources>


    <declare-styleable name="MovieSeatView" >
        <attr name="iconOnSale" format="reference" />
        <attr name="iconSold" format="reference" />
        <attr name="iconSelected" format="reference" />

        <attr name="seatPadding" format="dimension" />
        <attr name="showOverView" format="boolean" />

        <attr name="seatWidth" format="dimension" />
        <attr name="seatHeight" format="dimension" />
        <attr name="seatScaleFactorMin" format="float" />
        <attr name="seatScaleFactorMinBest" format="float" />
        <attr name="seatScaleFactorMax" format="float" />
        <attr name="seatScaleFactorMaxBest" format="float" />

        <attr name="rowNumberTextSize" format="dimension" />
        <attr name="rowNumberTextColor" format="color|reference" />
        <attr name="rowNumberBackground" format="color|reference" />
        <attr name="rowNumberTextStyle"/>
    </declare-styleable>


    <attr name="rowNumberTextStyle">
        <flag name="normal" value="0" />
        <flag name="bold" value="1" />
        <flag name="italic" value="2" />
    </attr>

</resources>
